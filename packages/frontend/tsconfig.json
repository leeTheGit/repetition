{
    "compilerOptions": {
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "bundler",
      "resolveJsonModule": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "types": [
        "vitest/importMeta",
        "webpack-env" 
      ],
      "plugins": [
        {
          "name": "next"
        }
      ],
      "paths": {
        "@repetition/frontend/*": ["../frontend/src/*"],
        "@repetition/core/*": ["../core/src/*"],
        "@repetition/functions/*": ["../functions/src/*"],
        "@/*": ["./src/*"]
      }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "lib/zValidator.js"],
    "exclude": ["node_modules"]
  }
  